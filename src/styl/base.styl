rupture.use-device-width = true
jeet.max-width = 992px

radius = 3px

*
  box-sizing border-box

:focus
  outline none

body
  font-family Arial, Helvetica, sans-serif
  line-height 1.5
  color #333

input
  padding .55em
  background white
  border 1px solid gray
  border-radius radius
  box-shadow inset 0 1px 2px rgba(black, .2)

a:link, a:visited
  color blue
  text-decoration none
